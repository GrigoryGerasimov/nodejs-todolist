<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="x-ua-compatible" content="IE=edge, chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no"/>
    <meta name="keywords" content="node, app, todo, list"/>
    <meta name="description" content="Todo List app on NodeJS"/>
    <title>Todo List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="w-full bg-gray-800">
<% if (taskCreated) { %>
    <div class="w-[75%] my-[10px] mx-auto py-[10%] text-green-500"></div>
<% } %>
<form action="/" method="post" enctype="application/x-www-form-urlencoded" class="w-[75%] my-[10px] mx-auto py-[10%] flex flex-row flex-wrap justify-between items-baseline">
    <input type="text" name="task" class="appearance-none border-none outline-none w-full mb-[5px] lg:w-[75%] lg:mb-0 px-[15px] py-[20px] bg-yellow-50 rounded-md text-lg" required/>
    <button type="submit" class="appearance-none border-none outline-none w-full lg:max-w-max px-[25px] py-[20px] bg-yellow-600 bg-opacity-95 hover:bg-yellow-50 text-yellow-50 hover:text-yellow-600 text-xl rounded-md"><%= btnCreateTask %></button>
</form>
<output class="w-[75%] my-[10px] mx-auto py-[10%] flex flex-row flex-wrap justify-between items-baseline">
    <% for (const listItem of taskList ) { %>
        <li class="tracking-widest list-none w-full mb-[5px] lg:w-[75%] lg:mb-0 px-[15px] py-[20px] text-yellow-50 text-2xl flex justify-center"><%= listItem.task %></li>
        <button type="button" data-type="remove" data-id="<%= listItem.id %>" class="appearance-none border-none outline-none w-full lg:max-w-max px-[25px] py-[20px] bg-red-400 bg-opacity-95 hover:bg-red-50 text-red-50 hover:text-red-400 text-xl rounded-md"><%= btnDeleteTask %></button>
    <% } %>
</output>
</body>
</html>